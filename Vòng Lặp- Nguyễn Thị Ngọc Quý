/*
    // Bài 5: tìm UCLN của 2 số n và m 

using System;

class EuclideanAlgorithm
{

    static void Main()
    {
        Console.OutputEncoding = System.Text.Encoding.Unicode;
        Console.Write("Nhập số n: ");
        int n = Convert.ToInt32(Console.ReadLine());

        Console.Write("Nhập số m: ");
        int m = Convert.ToInt32(Console.ReadLine());

        if (n == m)
        {
            Console.WriteLine("Ước chung lớn nhất của {0} và {1} là: {2}", n, m, n);
        }
        else if (n > m)
        {
            int gcd = Euclide(n, m);
            Console.WriteLine("Ước chung lớn nhất của {0} và {1} là: {2}", n, m, gcd);
        }
        else
        {
            int gcd = Euclide(m, n);
            Console.WriteLine("Ước chung lớn nhất của {0} và {1} là: {2}", n, m, gcd);
        }
    }

    static int Euclide(int n, int m)
    {
        while (m != 0)  // Chạy vòng lặp cho đến khi bằng 0
        {
            int tam = n % m;
            n = m;
            m = tam;
        }

        return n;
    }
}
