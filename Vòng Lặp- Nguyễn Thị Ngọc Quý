// VÒNG LẶP 
//Bài 1:Tính tổng của dãy số từ 1 đến 100
using System;

class Program
{
    static void Main(string[] args)
    {
        Console.OutputEncoding = System.Text.Encoding.Unicode;
        int n;
        Console.Write("Nhập vào số nguyên dương n: ");
        n = Convert.ToInt32(Console.ReadLine());
        if (n > 0 && n<=100)
        {

            int sum = 0;
            for (int i = 1; i <= n; i++)
            {
                sum += i;
            }
            Console.WriteLine("Tổng của dãy số từ 1 đến {0} là {1}.", n, sum);
        }
        else
            Console.Write("Vui lòng nhập số nguyên dương từ 1 đến 100");
       
        Console.ReadLine();
    }
}

